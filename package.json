{
  "name": "@cage/root",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "setup": "npm install && npm run build",
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspace @cage/backend",
    "typecheck": "tsc --build --verbose",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "check": "npm run typecheck && npm run lint && npm run test",
    "cage": "node packages/cli/dist/index.js",
    "start:server": "npm run start --workspace @cage/backend",
    "prepare": "husky",
    "install:local": "./scripts/install-local.sh",
    "publish:cli": "npm run build && cd packages/cli && npm publish",
    "publish:dry-run": "npm run build && cd packages/cli && npm publish --dry-run"
  },
  "keywords": [],
  "author": "Software Engineering & Consulting Pty Ltd",
  "license": "MIT",
  "description": "A controlled environment for AI that provides the right boundaries, context, and guidance",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sengac/cage.git"
  },
  "bugs": {
    "url": "https://github.com/sengac/cage/issues"
  },
  "homepage": "https://cage.tools"
}
