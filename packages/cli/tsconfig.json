{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node", "react"],
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "paths": {
      "@cage/shared": ["../shared/src"],
      "@cage/shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*.test.ts", "**/*.test.tsx"],
  "references": [{ "path": "../shared" }]
}
